<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/locationPermissionDialogContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/locationPermissionDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Allow homedepot.com \n to access this device\â€™s location?"/>

    <TextView
        android:id="@+id/locationPermissionDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textSize="12sp"
        android:text="This website is requesting access to your location while on the site."/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayishBrown"/>

    <TextView
        android:id="@+id/locationPermissionDialogAllowAlways"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:text="Allow Always"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayishBrown"/>

    <TextView
        android:id="@+id/locationPermissionDialogAllowOnce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:text="Allow Once"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayishBrown"/>

    <TextView
        android:id="@+id/locationPermissionDialogDenyAlways"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:text="Deny Always"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayishBrown"/>

    <TextView
        android:id="@+id/locationPermissionDialogDenyOnce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:text="Deny Once"/>

</LinearLayout>
