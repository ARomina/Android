<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duckduckgo.app.survey.ui.PushSurveyActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/surveyActivityContainerViewGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/survey_background">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:letterSpacing="0.18"
                android:paddingStart="30dp"
                android:paddingTop="22dp"
                android:paddingEnd="30dp"
                android:paddingBottom="22dp"
                android:text="@string/surveyTitle"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/dismissButton"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_close_24dp"
                android:backgroundTint="@color/carolinaBlue"
                android:contentDescription="@string/surveyDismissContentDescription"
                app:layout_constraintBottom_toBottomOf="@id/title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="28dp"
                android:paddingEnd="28dp"
                app:layout_constraintTop_toBottomOf="@id/title">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2sp"
                    android:text="1. Considering your experience so far, how likely are you to continue using the DuckDuckGo Privacy Browser?"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <RadioGroup
                    android:id="@+id/radioQ1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:textColor="@color/white">

                    <RadioButton
                        android:id="@+id/extremelyLikely"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ1Answered"
                        android:tag="extremelyLikely"
                        android:text="Extremely likely"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/likely"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ1Answered"
                        android:tag="likely"
                        android:text="Likely"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/neither"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ1Answered"
                        android:tag="neither"
                        android:text="Neither likely or unlikely"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/unlikely"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ1Answered"
                        android:tag="unlikely"
                        android:text="Unlikely"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/extremelyUnlikely"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:onClick="onQ1Answered"
                        android:tag="extremelyUnlikely"
                        android:text="Extremely unlikely"
                        android:textColor="@color/white" />

                </RadioGroup>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2sp"
                    android:paddingTop="20dp"
                    android:text="2. In the past week, which of the following best reflects a potentially negative experience you had while using the DuckDuckGo Privacy Browser?"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <RadioGroup
                    android:id="@+id/radioQ2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:textColor="@color/white">

                    <RadioButton
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ2Answered"
                        android:tag="search"
                        android:text="I didn't like DuckDuckGo search results"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/tasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ2Answered"
                        android:tag="tasks"
                        android:text="I found it difficult to accomplish tasks in the browser"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/features"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ2Answered"
                        android:tag="features"
                        android:text="It was missing features I rely on in other browsers"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ2Answered"
                        android:tag="forgot"
                        android:text="I couldn't remember to use the browser"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/otherBrowser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ2Answered"
                        android:tag="otherBrowser"
                        android:text="I preferred to use another browser"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/performance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ2Answered"
                        android:tag="perf"
                        android:text="The browser was too slow, crashed, or had other performance issues"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/brokenSites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ2Answered"
                        android:tag="brokenSites"
                        android:text="The browser interfered with website content or functionality"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/privacyConfig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ2Answered"
                        android:tag="privacyConfig"
                        android:text="I wasn't sure the browser was configured properly to protect my privacy"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:buttonTint="@color/white"
                        android:onClick="onQ2Answered"
                        android:tag="none"
                        android:text="None"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:onClick="onQ2Answered"
                        android:tag="other"
                        android:text="Other"
                        android:textColor="@color/white" />

                </RadioGroup>

                <Button
                    android:id="@+id/submitButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"
                    android:backgroundTint="@color/cornflowerDark"
                    android:enabled="false"
                    android:paddingStart="60dp"
                    android:paddingEnd="60dp"
                    android:text="Submit"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>



